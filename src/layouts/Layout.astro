---
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";

interface Props {
	title: string;
	description: string;
}

const { description, title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content={description} />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/supreSVG.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>

	<body>
		<!-- Aqui va ir un background de la pagina -->
		<div class="relative h-full w-full bg-black-950">
			<div
				class="absolute bottom-0 left-0 right-0 top-0 bg-[linear-gradient(to_right,#4f4f4f2e_1px,transparent_1px),linear-gradient(to_bottom,#4f4f4f2e_1px,transparent_1px)] bg-[size:14px_24px]"
			>
		</div>
		<!-- Aqui acaba el back-->
		<Header />
		<slot />
		<Footer />
	</body>

	<style is:global>
		:root {
			color-scheme: light dark;
		}
		html {
			font-family: system-ui, sans-serif;
			scroll-behavior: smooth;
		}

		body {
			background: #050505;
			display: flex;
			flex-direction: column;
			min-height: 100vh;
		}

		@media (prefers-reduced-motion: reduce) {
			html {
				scroll-behavior: auto;
			}
		}
	</style>
</html>
