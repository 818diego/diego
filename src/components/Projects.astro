---
import NextJS from "./icons/NextJS.astro"
import PHP from "./icons/PHP.astro"
import CSS from "./icons/CSS.astro"
import HTML from "./icons/HTML.astro"
import MySQL from "./icons/MySQL.astro"

const TAGS = {
    NEXT: {
        name: "Next.js",
        class: "bg-black text-white",
        icon: NextJS,
    },
    PHP: {
        name: "PHP",
        class: "bg-black text-white",
        icon: PHP,
    },
    CSS : {
        name: "HTML",
        class: "bg-black text-white",
        icon: CSS,
    },
    HTML: {
        name: "HTML",
        class: "bg-black text-white",
        icon: HTML,
    },
    MYSQL: {
        name: "MySQL",
        class: "bg-black text-white",
        icon: MySQL,
    },
}

const PROJECTS = [
    {
        title: "Gestion Hoteleria",
        description: " Aplicación web para la gestión de reservas de habitaciones de un hotel.",
        link: "https://costaensenada.com/",
        github: "#",
        image: "/projects/hotel.webp",
        tags: [TAGS.PHP, TAGS.CSS, TAGS.HTML, TAGS.MYSQL],
    },
]
---

{
    PROJECTS.map(({image, title, description, tags}) => ( 
        <article>
            <h3 class="text-2xl font-semibold text-pink-700 mb-2">{title}</h3>
            <p class="text-lg mb-4 text-pretty">{description}</p>
            <ul class="flex gap-x-4 flex-row">
                {tags.map((tag) => (
                    <li> 
                        <span class={`flex gap-x-4 rounded-full text-xs ${tag.class} py-1 px-2`}>
                            <tag.icon class="size-8"/>     
                        </span>
                    </li>
                ))}
            </ul>
                <img
                class="rounded shadow-2xl shadow-white/10 py-3" 
                src={image} 
                style={{borderRadius: "35px"}}
                alt={`Captura de pantalla del proeycto ${image}`} />
        </article>
    ))
}