---
import NextJS from "./icons/NextJS.astro"
import PHP from "./icons/PHP.astro"
import CSS from "./icons/CSS.astro"
import HTML from "./icons/HTML.astro"
import MySQL from "./icons/MySQL.astro"
import JavaScript from "./icons/JavaScript.astro"

const TAGS = {
    NEXT: {
        name: "Next.js",
        class: "bg-black text-white",
        icon: NextJS,
    },
    PHP: {
        name: "PHP",
        class: "bg-black text-white",
        icon: PHP,
    },
    CSS : {
        name: "HTML",
        class: "bg-black text-white",
        icon: CSS,
    },
    HTML: {
        name: "HTML",
        class: "bg-black text-white",
        icon: HTML,
    },
    MYSQL: {
        name: "MySQL",
        class: "bg-black text-white",
        icon: MySQL,
    },
    JAVASCRIPT: {
        name: "JavaScript",
        class: "bg-black text-white",
        icon: JavaScript,
    },
}

const PROJECTS = [
    {
        title: "Management of hotel room reservations",
        description: " Web application for the management of hotel room reservations.",
        link: "https://costaensenada.com/",
        github: "#",
        image: "/projects/hotel.webp",
        tags: [TAGS.PHP, TAGS.CSS, TAGS.HTML, TAGS.MYSQL, TAGS.JAVASCRIPT],
    },
    {
        title: "Static web page for Calcifer Roleplay",
        description: "Calcifer Roleplay is a GTA V Roleplay server and a static website was made for the promotion of GTA V Roleplay.",
        link: "www.calciferrp.com",
        github: "https://github.com/818diego/calciferoleplay",
        image: "/projects/CALCIFER.webp",
        tags: [TAGS.CSS, TAGS.HTML, TAGS.JAVASCRIPT],
    },
]
---

{
    PROJECTS.map(({image, title, description, tags}) => ( 
        <article class="py-5 px-2">
            <h3 class="text-2xl font-semibold text-pink-700 mb-2">{title}</h3>
            <p class="text-lg mb-4 text-pretty">{description}</p>
            <ul class="flex gap-x-4 flex-row">
                {tags.map((tag) => (
                    <li> 
                        <span class={`flex gap-x-4 rounded-full text-xs ${tag.class} py-1 px-2`}>
                            <tag.icon class="size-8"/>    
                        </span>
                    </li>
                ))}
            </ul>
                <img
                class="rounded shadow-2xl shadow-white/10 py-3" 
                src={image} 
                style={{borderRadius: "35px"}}
                alt={`Captura de pantalla del proyecto ${image}`} />
        </article>
    ))
}